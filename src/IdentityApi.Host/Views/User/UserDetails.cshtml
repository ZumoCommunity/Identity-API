@model User

@{
      ViewBag.Title = "User information";
}

<div class="row">
    <div class="col-sm-8">
        <h1>User: @Model.FullName</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-md-5">
                <div class="col-md-12">
                    <h4>Profile</h4>
                    <form>
                        <div class="form-group">
                            <label id="labelFirstName">First name:</label> @Model.FirstName 
                        </div>
                        <div class="form-group">
                            <label id="labelLastName">Last name:</label> @Model.LastName
                        </div>
                        <div class="form-group">
                            <label id="labelEmail">Email:</label> @Model.Email 
                        </div>

                    </form>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-info" id="profileEdit" >Edit</a>
                </div>
                <div class="col-md-12">
                    <hr/>
                    <p></p>
                    <p></p>
                    <a class="btn btn-link" href="~/admin/User/ChangePasswordUser/@Model.Id">Change password</a>
                    <p></p>
                    <p></p>
                    <hr />
                 

                </div>
            </div>
            <div class="col-md-7">
        </div> 
    </div>
</div>


<div class="row">
    <div class="col-sm-8">
        <p></p>
        <p></p>
        <p><a asp-controller="User" asp-action="Index"> Back to list</a></p>
    </div>
</div>

