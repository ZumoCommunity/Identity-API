@model UserViewModel

@{
    ViewBag.Title = "New User";
}

<div class="row">
    <div class="col-sm-8">
        <h2>Edit User: [@Model.FullName]</h2>
        <form asp-controller="User" asp-action="Edit">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Email" class="control-label col-md-2">Email</label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label col-md-2">First name</label>
                    <div class="col-md-10">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label col-md-2">Last name</label>
                    <div class="col-md-10">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to list</a>
</div>
